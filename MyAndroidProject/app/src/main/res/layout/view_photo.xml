<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="252dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/photoName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Photo Name"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="388dp" />

        <Button
            android:id="@+id/renameButton"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:onClick="renamePhoto"
            android:text="Rename" />

        <Button
            android:id="@+id/movePhotoButton"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:onClick="movePhoto"
            android:text="Move Photo" />

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:onClick="nextPhoto"
            android:text="Next Photo" />

        <Button
            android:id="@+id/buttonPrev"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:onClick="prevPhoto"
            android:text="Previous Photo" />

        <Button
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:onClick="deletePhoto"
            android:text="Delete Photo"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="550dp" />

        <Button
            android:id="@+id/addtag"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:onClick="addTag"
            android:text="Add Tag" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:onClick="deleteTag"
            android:text="Delete Tag" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:onClick="viewTags"
            android:text="View Tags" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>